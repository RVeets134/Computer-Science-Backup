
public abstract class Vehicle{

	private String name;
	private int passengerLimit;
	private String vehicleType;
	private String vehicleInfo;
	
	public Vehicle(String name,int passengerLimit,String vehicleType) {

		this.name = name;
		this.passengerLimit = passengerLimit;
		this.vehicleType = vehicleType;
		createString();
		
	}
	
	public abstract void move();
	
	public String getName()
	{
		
		return name;
		
	}

	public int getPassengerLimit()
	{
		
		return passengerLimit;
		
	}
	
	public void setName(String name)
	{
		
		this.name = name;
		
	}
	
	public void setPassengerLimit(int passengerLimit)
	{
		
		this.passengerLimit = passengerLimit;
		
	}
	
	private void createString()
	{
		
		vehicleInfo = "Type of Vehicle: " + vehicleType + "\n" + "Name of Vehicle: " + name + "\n" + "Maximum holding capacity: " + passengerLimit;
		
	}
	
	public String toString()
	{
		
		String info;
		info = vehicleInfo;
		return info;
		
	}
	
	public void compareTo(Vehicle v)
	{
		
		if(passengerLimit < v.passengerLimit)
		{
			System.out.print(name + " has less seats than " + v.name);
		}
		else if(passengerLimit > v.passengerLimit)
		{
			System.out.print(name + " has more seats than " + v.name);
		}
		else
		{
			System.out.print(name + " has the same amount of seats as " + v.name);
		}
		
	}

}
